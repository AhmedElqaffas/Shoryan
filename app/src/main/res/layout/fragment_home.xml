<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="0dp"
        android:theme="@style/CustomActionBar">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">
            <include android:id="@+id/homeAppbar"
                layout="@layout/appbar"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_scrollFlags="scroll|enterAlways"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Home"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="40dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.9"
                android:id="@+id/homeCardsLayout">

                <androidx.cardview.widget.CardView
                android:id="@+id/cardViewOne"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp">
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTwo"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/cardViewOne"
                    app:layout_constraintBottom_toBottomOf="@id/cardViewOne"
                    app:layout_constraintLeft_toRightOf="@id/cardViewOne"
                    app:layout_constraintRight_toLeftOf="@id/cardViewThree"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="10dp">
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewThree"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/cardViewOne"
                    app:layout_constraintBottom_toBottomOf="@id/cardViewOne"
                    app:layout_constraintRight_toRightOf="parent"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="10dp">
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/requestsWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/homeCardsLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintHorizontal_bias="0.95"
                android:text="@string/requests"
                android:textSize="25sp"
                android:fontFamily="arial"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <fragment
                android:id="@+id/requestsContainer"
                android:name="com.example.sharyan.ui.RequestsRecyclerFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/requestsWord"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>