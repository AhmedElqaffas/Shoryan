<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Home">

    <include android:id="@+id/homeAppbar"
        layout="@layout/appbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/homeAppbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintVertical_bias="0.1"
        android:id="@+id/homeCardsLayout">

        <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTwo"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cardViewOne"
            app:layout_constraintBottom_toBottomOf="@id/cardViewOne"
            app:layout_constraintLeft_toRightOf="@id/cardViewOne"
            app:layout_constraintRight_toLeftOf="@id/cardViewThree"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewThree"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cardViewOne"
            app:layout_constraintBottom_toBottomOf="@id/cardViewOne"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/requestsWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/homeCardsLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginEnd="20dp"
        android:text="@string/requests"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/requestsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/requestsWord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/homeCardsLayout"
        app:layout_constraintRight_toRightOf="@id/homeCardsLayout"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>