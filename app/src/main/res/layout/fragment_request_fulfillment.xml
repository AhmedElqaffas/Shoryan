<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RequestFulfillmentFragment"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:id="@+id/design_bottom_sheet">

        <TextView
            android:id="@+id/donationRequestWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="25dp"
            android:text="@string/donation_request"
            android:fontFamily="arial"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <!--<androidx.core.widget.NestedScrollView
            android:id="@+id/requestDetailsScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/donationRequestWord">-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/donationRequestWord">

                <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    map:cameraZoom="13"
                    map:mapType="normal"
                    map:uiCompass="false" />

                <View
                    android:id="@+id/cardBiasGuide"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toTopOf="@id/mapFragment"
                    app:layout_constraintBottom_toBottomOf="@id/mapFragment"
                    app:layout_constraintVertical_bias="0.8"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/requestDetailsCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    app:cardCornerRadius="21dp"
                    app:layout_constraintTop_toBottomOf="@id/cardBiasGuide"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.85">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/requestBloodType"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/red_circle"
                            android:fontFamily="arial"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            app:layout_constraintHorizontal_bias="0.9"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="@string/b_plus" />

                        <TextView
                            android:id="@+id/requesterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="arial"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            app:layout_constraintHorizontal_bias="0.7"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/requestBloodType"
                            app:layout_constraintTop_toTopOf="@id/requestBloodType"
                            tools:text="عبد الغفور البرعي" />

                        <TextView
                            android:id="@+id/requestLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="arial"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_pin"
                            app:layout_constraintRight_toRightOf="@id/requesterName"
                            app:layout_constraintTop_toBottomOf="@id/requesterName"
                            tools:text="مدينة نصر" />

                        <TextView
                            android:id="@+id/requestBagsRequired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="arial"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_blood_drop"
                            app:layout_constraintRight_toRightOf="@id/requesterName"
                            app:layout_constraintTop_toBottomOf="@id/requestLocation"
                            tools:text="@string/blood_bags" />

                        <TextView
                            android:id="@+id/personsDonatingToRequest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="arial"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/ic_blood_hand"
                            app:layout_constraintRight_toRightOf="@id/requesterName"
                            app:layout_constraintTop_toBottomOf="@id/requestBagsRequired"
                            tools:text="@string/persons_going" />

                        <TextView
                            android:id="@+id/callRequesterIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            app:drawableStartCompat="@drawable/ic_phone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.28"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/personsDonatingToRequest" />

                        <TextView
                            android:id="@+id/messageRequesterIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            app:drawableStartCompat="@drawable/ic_chat"
                            app:layout_constraintRight_toLeftOf="@id/callRequesterIcon"
                            app:layout_constraintTop_toTopOf="@id/callRequesterIcon" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_curved_red"
                    app:layout_constraintLeft_toLeftOf="@id/requestDetailsCard"
                    app:layout_constraintRight_toRightOf="@id/requestDetailsCard"
                    app:layout_constraintTop_toBottomOf="@id/requestDetailsCard"
                    android:fontFamily="arial"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="@string/donate"
                    android:paddingVertical="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>