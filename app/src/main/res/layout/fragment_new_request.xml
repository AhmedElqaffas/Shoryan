<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewmodel"
            type="com.example.shoryan.viewmodels.NewRequestViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.NewRequestFragment">

        <include android:id="@+id/newRequestAppbar"
            layout="@layout/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="20dp"
            app:layout_constraintVertical_bias="0"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/newRequestAppbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingBottom="20dp">
                <TextView
                    android:id="@+id/requestConstraintWord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.6"
                    android:text="@string/donation_constraint"
                    android:fontFamily="arial"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark" />


                <TextView android:id="@+id/bloodTypeWord"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/requestConstraintWord"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/blood_type"
                    android:fontFamily="arial"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bloodTypeRadioGroupsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bloodTypeWord"
                    android:layout_marginTop="20dp">

                    <RadioGroup
                        android:id="@+id/plusTypesRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:weightSum="13">
                        <RadioButton
                            android:id="@+id/A_plus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/a_plus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                        <View
                            android:id="@+id/space1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                        <RadioButton
                            android:id="@+id/B_plus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/b_plus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                        <View
                            android:id="@+id/space2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                        <RadioButton
                            android:id="@+id/AB_plus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/ab_plus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                        <View
                            android:id="@+id/space3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                        <RadioButton
                            android:id="@+id/O_plus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/o_plus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/minusTypesRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/plusTypesRadioGroup"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:weightSum="13">
                        <RadioButton
                            android:id="@+id/A_minus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/a_minus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                        <View
                            android:id="@+id/space4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                        <RadioButton
                            android:id="@+id/B_minus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/b_minus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                        <View
                            android:id="@+id/space5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                        <RadioButton
                            android:id="@+id/AB_minus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/ab_minus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                        <View
                            android:id="@+id/space6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="invisible"/>
                        <RadioButton
                            android:id="@+id/O_minus"
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:button="@null"
                            android:background="@drawable/button_blood_type_selector"
                            android:gravity="center"
                            android:text="@string/o_minus"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_blood_type_button"
                            android:layout_weight="2"/>
                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/chooseLocationWord"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/incrementBloodBags"
                    app:layout_constraintRight_toRightOf="@id/bloodTypeWord"
                    android:layout_marginTop="40dp"
                    android:text="@string/choose_location"
                    android:fontFamily="arial"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:id="@+id/governmentsSpinnerLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/chooseLocationWord"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.75"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/spinner_grey_curve" >

                    <ImageView
                        android:id="@+id/governmentsSpinnerImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/iconfinder_nav_arrow_right_383100_grey" />

                    <Spinner
                        android:id="@+id/spinnerGov"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:id="@+id/governmentsSpinnerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_governorate"
                        android:layout_marginRight="5dp"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/citySpinnerLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/governmentsSpinnerLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.75"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinner_grey_curve" >

                    <ImageView
                        android:id="@+id/citySpinnerImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/iconfinder_nav_arrow_right_383100_grey" />

                    <Spinner
                        android:id="@+id/spinnerCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:id="@+id/citySpinnerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_city"
                        android:layout_marginRight="5dp"
                        android:textSize="16sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bloodBankSpinnerLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/citySpinnerLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.75"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinner_grey_curve" >

                    <ImageView
                        android:id="@+id/bloodBankSpinnerImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/iconfinder_nav_arrow_right_383100_grey" />

                    <Spinner
                        android:id="@+id/spinnerBloodBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:spinnerMode="dropdown"/>

                    <TextView
                        android:id="@+id/bloodBankSpinnerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_blood_bank"
                        android:layout_marginRight="5dp"
                        android:textSize="16sp"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/bagsNumberWord"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bloodTypeRadioGroupsContainer"
                    app:layout_constraintRight_toRightOf="@id/bloodTypeWord"
                    android:layout_marginTop="40dp"
                    android:text="@string/bags_number"
                    android:fontFamily="arial"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/incrementBloodBags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bagsNumberWord"
                    android:layout_marginTop="35dp"
                    app:layout_constraintHorizontal_bias="0.86"
                    android:background="@drawable/button_blood_type_selector"
                    android:gravity="center"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/text_blood_type_button"/>

                <Button
                    android:id="@+id/decrementBloodBags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/incrementBloodBags"
                    app:layout_constraintHorizontal_bias="0.14"
                    android:background="@drawable/button_blood_type_selector"
                    android:gravity="center"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="@color/text_blood_type_button"/>

                <EditText
                    android:id="@+id/bagsNumberEditText"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/incrementBloodBags"
                    app:layout_constraintBottom_toBottomOf="@id/incrementBloodBags"
                    app:layout_constraintRight_toLeftOf="@id/incrementBloodBags"
                    app:layout_constraintLeft_toRightOf="@id/decrementBloodBags"
                    android:inputType="number"
                    android:hint="0"
                    android:textAlignment="center"
                    android:maxLength="2"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="arial"/>

                <Button
                    android:id="@+id/confirmRequestButton"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bloodBankSpinnerLayout"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="53dp"
                    android:paddingVertical="18dp"
                    android:background="@drawable/button_disabled_selector"
                    android:text="@string/donation_request"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="arial"
                    android:enabled="false"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.468"
                    app:layout_constraintStart_toEndOf="@+id/confirmRequestButton"
                    app:layout_constraintTop_toBottomOf="@+id/bloodBankSpinnerLayout"
                    app:isVisible="@{viewmodel.isCheckingRequestAbility}"/>

                <TextView
                    android:id="@+id/checkingPermissionSentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/confirmRequestButton"
                    app:layout_constraintLeft_toLeftOf="@id/confirmRequestButton"
                    app:layout_constraintRight_toRightOf="@id/confirmRequestButton"
                    android:fontFamily="arial"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/checking_requesting_permission"
                    app:isVisible="@{viewmodel.isCheckingRequestAbility}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>