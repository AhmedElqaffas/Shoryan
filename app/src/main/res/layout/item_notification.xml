<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/newNotificationIcon"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_new_notification" />

            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/newNotificationIcon"
                app:layout_constraintBottom_toBottomOf="@id/newNotificationIcon"
                app:layout_constraintRight_toLeftOf="@+id/newNotificationIcon"
                android:layout_marginRight="5dp"
                android:fontFamily="arial"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                tools:text="طلب جديد"/>

            <TextView
                android:id="@+id/notificationDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/notificationTitle"
                app:layout_constraintRight_toRightOf="@id/notificationTitle"
                android:fontFamily="arial"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#707070"
                tools:text="بنك الدم المتواجد بالقرب منك به نقص، نحن نحتاج اليك" />

            <TextView
                android:id="@+id/notificationTimeElapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/notificationDetails"
                app:layout_constraintRight_toRightOf="@id/notificationDetails"
                android:layout_marginTop="5dp"
                android:paddingBottom="25dp"
                android:fontFamily="arial"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="#B42121"
                android:text="منذ "/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>