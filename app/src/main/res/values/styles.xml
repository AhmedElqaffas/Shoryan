<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:datePickerStyle">@style/myDatePickerStyle</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:windowContentOverlay">@null</item>
        <item name="background">@drawable/appbar_background</item>
        <item name="android:background">@drawable/appbar_background</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">arial</item>
    </style>

    <style name="myDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>